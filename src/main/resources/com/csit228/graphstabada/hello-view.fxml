<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.csit228.graphstabada.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Button mnemonicParsing="false" onAction="#onSaveClicked" prefHeight="25.0" prefWidth="90.0" text="Save" />
      <AnchorPane fx:id="apPane" prefHeight="500.0" prefWidth="500.0">
         <children>
            <StackPane layoutX="56.0" layoutY="80.0" onMouseClicked="#onVertexClick">
               <children>
                  <Circle radius="33.0" stroke="BLACK" strokeType="INSIDE">
                     <fill>
                        <LinearGradient endX="1.0" endY="1.0" startY="0.33175355450236976">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="1.0" opacity="0.7290076613426208" />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </fill>
                  </Circle>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="F">
                     <font>
                        <Font name="System Bold" size="35.0" />
                     </font>
                  </Text>
               </children>
            </StackPane>
            <StackPane layoutX="289.0" layoutY="230.0" onMouseClicked="#onVertexClick">
               <children>
                  <Circle radius="33.0" stroke="BLACK" strokeType="INSIDE">
                     <fill>
                        <LinearGradient endX="1.0" endY="1.0" startY="0.33175355450236976">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="1.0" opacity="0.7290076613426208" />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </fill>
                  </Circle>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="F">
                     <font>
                        <Font name="System Bold" size="35.0" />
                     </font>
                  </Text>
               </children>
            </StackPane>
         </children>
      </AnchorPane>
      <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="343.0" minWidth="10.0" prefWidth="343.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="197.0" minWidth="10.0" prefWidth="117.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#onCreateClicked" prefWidth="100.0" text="Create" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <TextField fx:id="tfName" promptText="Name of Vertex" />
         </children>
      </GridPane>
   </children>

    
</VBox>
